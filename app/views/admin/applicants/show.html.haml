.card-header
  %h1.card-title= @applicant.full_name
  %small= t('admin.applicants.show.applied_at', date: @applicant.created_at)

.card-body
  .row
    .col-lg
      .card
        .card-header
          %h5.card-title= t('admin.applicants.show.details.header')
        %ul.list-group.list-group-flush
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= t('admin.applicants.show.details.first_name')
              %span= @applicant.first_name
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= t('admin.applicants.show.details.last_name')
              %span= @applicant.last_name
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= t('admin.applicants.show.details.birthdate')
              %span= @applicant.birthdate.iso8601
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= t('admin.applicants.show.details.ssn')
              %span= @applicant.ssn.gsub(/^\d{5}/, "••• - •• - ")
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= t('admin.applicants.show.details.email_address')
              %span= @applicant.email_address
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= t('admin.applicants.show.details.phone_number')
              %span= @applicant.phone_number
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= t('admin.applicants.show.details.address')
              %address
                = @applicant.street_address
                %br
                = "#{@applicant.city}, #{@applicant.state} #{@applicant.postal_code}"
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= "Bank Account Number"
              %span= @applicant.bank_account.bank_account_number
          %li.list-group-item
            .d-flex.justify-content-between
              %strong= "Bank Routing Number"
              %span= @applicant.bank_account.bank_routing_number

    .col-lg
      .card
        .card-header
          %h5.card-title= t('admin.applicants.show.result')
        .card-body.text-center
          %h3= t("shared.#{@applicant.descision.parameterize}")
          %p= descision_icon(@applicant.descision, size: 3)
      .card
        .card-header
          %h5.card-title= t('admin.applicants.show.reasons.header')
        %ul.list-group.list-group-flush
          %li.list-group-item
            %h4= t('admin.applicants.show.reasons.success')
            %ul.none
              - (@applicant.tags & TAG_GROUPS[:success]).each do |t|
                %li
                  = descision_icon "Approved"
                  = t("shared.tags.#{t.parameterize}")
          %li.list-group-item
            %h4= t('admin.applicants.show.reasons.warning')
            %ul.none
              - (@applicant.tags & TAG_GROUPS[:warning]).each do |t|
                %li
                  = descision_icon "Manual Review"
                  = t("shared.tags.#{t.parameterize}")
          %li.list-group-item
            %h4= t('admin.applicants.show.reasons.danger')
            %ul.none
              - (@applicant.tags & TAG_GROUPS[:danger]).each do |t|
                %li
                  = descision_icon "Denied"
                  = t("shared.tags.#{t.parameterize}")
