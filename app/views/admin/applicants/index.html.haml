= image_tag 'chart_placeholder.png'

.card
  .card-header
    .main
      %h2
        = t('dashboard.heading')
        .badge.badge-info= @applicants.count
      = link_to root_url do
        = t('View All')
        = fa_icon :arrow_right
    .search
      = form_tag(root_url, method: :get) do
        .input-group.input-group-lg
          = text_field_tag(:query, '', placeholder: t('dashboard.search_ph'))
          .input-group-append
            %button.btn.btn-primary{type: :submit}
              = fa_icon :search
  .card-body
    %table
      %thead
        %tr
          %th= t('claims.name')
          %th= t('claims.number')
          %th= t('claims.status')
          %th= t('claims.date')
          %th= t('claims.days')
      %tbody= render @applicants
